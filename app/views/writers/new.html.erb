<div class="container">
  <%= form_with scope: :writer, url: writers_path, local: true do |form| %>
    <% if @writer.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@writer.errors.count, "error") %> prohibited
          this writer from being saved:
        </h2>
        <ul>
          <% @writer.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row">
      <label for="name" class="col-sm-2 col-form-label">作者姓名</label>
      <div class="col-sm-10">
        <%= form.text_field :name, class: "form-control", placeholder: "作者姓名" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="desc" class="col-sm-2 col-form-label">作者简介</label>
      <div class="col-sm-10">
        <%= form.text_area :bio, class: "form-control", placeholder: "作者简介", rows: 3 %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">创建作者</button>
      </div>
    </div>
  <% end %>
</div>
